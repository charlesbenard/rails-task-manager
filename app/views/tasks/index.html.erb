<h1>My ToDo list</h1>

<%= link_to 'create a task', new_task_path %>
<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= link_to "show", task_path(task) %></p>
  <p><%= link_to "update", edit_task_path(task) %></p>
  <p><%= link_to "Destroy", task_path(task), method: :delete%></p>
  <p><%= task.description %></p>
  <hr>
<% end %>

